{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "paths": {
      "@libs/auth": [
        "dist/libs/auth/libs-auth",
        "dist/libs/auth"
      ],
      "@libs/albums": [
        "dist/libs/albums/libs-albums",
        "dist/libs/albums"
      ]
    },
    "sourceMap": true,
    "target": "es2015"
  }
}
